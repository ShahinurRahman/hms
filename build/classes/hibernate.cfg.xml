<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- Database connection settings -->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/hms_db</property>
    <property name="connection.username">root</property>
    <property name="connection.password"/>
    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>
    <!-- SQL dialect -->
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <!-- Disable the second-level cache  -->
    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    <!-- Echo all executed SQL to stdout -->
    <property name="show_sql">true</property>
    <!-- Drop and re-create the database schema on startup -->
    <property name="hbm2ddl.auto">update</property>
    <mapping class="com.hms.model.Biochemistry"/>
    <mapping class="com.hms.model.Blood"/>
    <mapping class="com.hms.model.ClinicalPathology"/>
    <mapping class="com.hms.model.Colonscopy"/>
    <mapping class="com.hms.model.ColorDoppler"/>
    <mapping class="com.hms.model.CtScan"/>
    <mapping class="com.hms.model.DentalXray"/>
    <mapping class="com.hms.model.Department"/>
    <mapping class="com.hms.model.Diabeties"/>
    <mapping class="com.hms.model.DiscountBy"/>
    <mapping class="com.hms.model.DuplexStudy"/>
    <mapping class="com.hms.model.Ecg"/>
    <mapping class="com.hms.model.Echocardiogram"/>
    <mapping class="com.hms.model.Eeg"/>
    <mapping class="com.hms.model.Endoscopy"/>
    <mapping class="com.hms.model.Ett"/>
    <mapping class="com.hms.model.Gastroscopy"/>
    <mapping class="com.hms.model.Haematology"/>
    <mapping class="com.hms.model.Histopathology"/>
    <mapping class="com.hms.model.Immunology"/>
    <mapping class="com.hms.model.Microbiology"/>
    <mapping class="com.hms.model.Mri"/>
    <mapping class="com.hms.model.Patient"/>
    <mapping class="com.hms.model.PcrLab"/>
    <mapping class="com.hms.model.Sonography"/>
    <mapping class="com.hms.model.Stool"/>
